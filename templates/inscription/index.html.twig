{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>#person_birthDate{display: inline-flex}</style>

<main class="my-form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center"><h1>INSCRIPTION </h1></div>
                    <div class="card-body">
                        {% for message in app.flashes("success") %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        {{ form_start(form) }}
                        <div class="form-group row">
                            <div class="col-md-12">
                                {{ form_row(form.gender,{label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                            </div>
                        </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    {{ form_row(form.lastname, {label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    {{ form_row(form.firstname,{label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    {{ form_row(form.birthDate,{label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    {{ form_row(form.email,{label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    {{ form_row(form.gender,{label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    {{ form_row(form.jobTitle,{label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    {{ form_row(form.nationality,{label_attr: {class: 'col-md-4 col-form-label text-md-right'} }) }}
                                </div>
                            </div>

                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary">
                                    Valider
                                </button>
                            </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    </div>



{% endblock %}

